<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:colorPrimary">@color/passio_primary</item>
        <item name="android:statusBarColor">@color/passio_white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="btn_negative_action" parent="AppTheme">
        <item name="android:background">@drawable/rc_8_border_purple</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/passio_primary</item>
    </style>

    <style name="btn_positive_action" parent="AppTheme">
        <item name="android:background">@drawable/rc_8_purple</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/passio_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Custom Text Appearance for Weekdays -->
    <style name="CustomWeekDayTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/passio_gray700</item> <!-- Custom color for weekdays -->
        <item name="android:textSize">14sp</item> <!-- Custom size for weekdays -->
    </style>

    <style name="TextProfile" parent="Widget.AppCompat.TextView">
        <item name="android:minHeight">24dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/passio_gray500</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintWidth_percent">0.4</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
